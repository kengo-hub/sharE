<%= form_with(model: [venue, review], url: venue_reviews_path(product), local: true) do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>

    <%= f.text_area :content, rows:'5', placeholder: "コメント", class: "form-control form-control-sm" %>
    <div id="rating-form">
        <label>評価：</label>
        <%# scoreNameの値をhidden_fieldでカラムに送っている %>
        <%= f.hidden_field :rate, :value => 'score' %>
    </div>

    <%= f.submit "投稿する" %>
<% end %>


<script>
    $('#rating-form').raty({
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        scoreName: 'product_comment[rate]'
    });
</script>