<div class="container">
    <div class="row my-3">
        <div class="col-lg-12 i-show-empty">
            <h4>会場詳細</h4>
            <div class="">
                <div class="pt-5">
                    <%= attachment_image_tag @venue, :image, :fill, 250, 200, format:'jpeg', fallback:"no_image.jpg" %>
                </div>
                <div class="ml-5 mb-5">
                    <table class="table">
                        <tr>
                            <th class="">会場名</th>
                            <td><%= @venue.name %></td>
                        </tr>
                        <tr>
                            <th class="">郵便番号</th>
                            <td><%= @venue.postcode %></td>
                        </tr>
                            <th class="">住所</th>
                            <td>
                                <%= @venue.address %>
                                <div id="map"></div>
                                <style>
                                #map{
                                  height: 200px;
                                  width:300px;
                                }
                                </style>
                                
                                <script type="text/javascript">
                                    function initMap() {
                                
                                        var test ={lat: <%= @venue.latitude %>, lng: <%= @venue.longitude %>};
                                        var map = new google.maps.Map(document.getElementById('map'), {
                                            zoom: 15,
                                            center: test
                                        });
                                        var transitLayer = new google.maps.TransitLayer();
                                        transitLayer.setMap(map);
                                
                                        var contentString = '住所：<%= @venue.address %>';
                                        var infowindow = new google.maps.InfoWindow({
                                            content: contentString
                                        });
                                
                                        var marker = new google.maps.Marker({
                                            position:test,
                                            map: map,
                                            title: contentString
                                        });
                                
                                        marker.addListener('click', function() {
                                            infowindow.open(map, marker);
                                        });
                                    }
                                </script>
                                
                                <script async defer
                                        src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap">
                                </script>
                            </td>
                        </tr>
                            <th class="">都道府県</th>
                            <td><%= @venue.prefecture %></td>
                        </tr>
                        <tr>
                            <th class="">評価</th>
                            <td><%= @venue.rate %></td>
                        </tr>
                    </table>
                </div>
            </div>
            <%= form_with(model: [@venue, @review], url: venue_reviews_path(@venue), local: true) do |f| %>
            <%= f.text_area :content, rows:'5', placeholder: "コメント", class: "form-control form-control-sm" %>
            <div id="rating-form">
                <label>評価：</label>
                <%= f.hidden_field :rate, :value => 'score' %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
            </div>
            <%= f.submit "投稿する" %>
            <% end %>

            <% @venue.reviews.each do |review| %>
            <div class="pt-2 px-2" style="background-color: #fffffe; border: 2px solid #272343; border-radius: 2px;">
                <div class="review-rating" data-score="<%= review.rate %>">評価：</div>
                
                <div class="text-left">
                    <p>投稿者：<%= review.user.nickname %></p>
                    <p><%= review.content %></p>
                </div>
        
                <div class="text-right">
                    <p>
                        投稿日：<%= review.created_at.strftime('%Y/%m/%d') %> |
                        <% if review.user == current_user %>
                            <%= link_to venue_review_path(review.venue, review), method: :delete, class: "btn btn-sm btn-danger" do %>
                                コメント削除 <i class="fas fa-trash"></i>
                        <% end %>
                        <% end %>
                    </p>
                </div>
            </div>
        
            <div class="pb-2"></div>
        
        <% end %>
            
        </div>
    </div>
</div>

<script>
    $('#rating-form').raty({
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        scoreName: 'review[rate]'
    });
</script>

<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>
