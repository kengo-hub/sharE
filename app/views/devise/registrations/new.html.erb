<div class="container">
  <div class="row">
    <div class="ccol-lg-11 offset-lg-1">
      <br>
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          ニックネーム<br>
          <span><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %></span>
        </div>
        
        <div class="field">
          年齢<br>
          <span><%= f.select :age, options_for_select(User.ages_i18n.invert,:selected =>0 ) %></span>
        </div>

        <div class="field">
          メールアドレス<br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          パスワード<br>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          パスワード<br>
          （確認）<br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "新規会員登録", class:"btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <%= link_to "ログインはこちら", new_user_session_path,class: "btn btn-sm btn-success" %>
      <br>

    </div>
  </div>
</div>