<div class="container">
  <div class="row my-3">
    <div class="col-lg-12 i-show-empty">
      <h4 class="pr-3 pt-3">イベント登録</h4>
      <%= form_with model:@event, url:admins_event_path, local:true do |f| %>
      <table class="table">
          <tr>
            <th class="">イベント名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th class="">会場名</th>
            <td><%= f.collection_select :venue_id , Venue.select("name,id"), :id, :name , :include_blank => "選択してください" %></td>
          </tr>
           <tr>
            <th class="">アーティスト名</th>
            <td><%= f.collection_select :artist_id , Artist.select("name,id"), :id, :name , :include_blank => "選択してください" %></td>
          </tr>
          <tr>
            <th class="">開催日</th>
            <td><div class="field">
              <%= f.date_field :event_date %>
            </div></td>
          </tr>
            
        </table>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <% end %>
      <div>
        <br>
        <%= link_to '削除する', admins_event_path(@event), method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>
</div>
